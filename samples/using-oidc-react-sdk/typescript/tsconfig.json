{
    "compilerOptions": {
      "target": "ES6",
      "jsx": "react",
      "module": "ESNext",
      "sourceMap": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "typeRoots" : [ "./typings" ]
    },
    "include": [
        "typings/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
